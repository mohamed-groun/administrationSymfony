{% extends 'base.html.twig' %}

{% block body %}
    <h1>Convention</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ convention.id }}</td>
            </tr>
            <tr>
                <th>Photo</th>
                <td>{{ convention.photo }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ convention.titre }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ convention.description }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('convention_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('convention_edit', { 'id': convention.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
