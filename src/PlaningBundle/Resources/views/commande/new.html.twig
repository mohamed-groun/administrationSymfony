                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="wlocation2"> Select Commercial : <span class="danger">*</span> </label>
                                                    <select class="custom-select form-control required" id="wlocation2" name="commerce">
                                                        {% for commerce in commerce %}
                                                        <option >{{ commerce.nom }} {{ commerce.prenom }}</option>
                                                        {% endfor %}
                                                    </select>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                     <div class="form-group">
                                                    <label for="wlocation2"> Select Account Manager : <span class="danger">*</span> </label>
                                                    <select class="custom-select form-control required" id="wlocation2" name="account">
                                                        {% for account in account %}
                                                        <option >{{ account.nom }} {{ account.prenom }} </option>
                                                        {% endfor %}
                                                    </select>
                                                </div>
                                            </div>
                                        </div>
                                    </section>
                                    <!-- Step 2 -->
                                    <h6>Step 2</h6>
                                    <section>
                                        <div class="row">
                                            <div class="col-md-6">
