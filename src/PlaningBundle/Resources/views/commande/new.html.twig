                                                    <input type="date" class="form-control " id="webUrl3" name="prod"> 
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <label for="shortDescription3">Deadline :</label>
                                                    <input type="date" class="form-control " id="webUrl3" name="Deadline"> 
                                                </div>
                                            </div>
                                        </div>
                                    </section>
                                    <!-- Step 3 -->
                                    <h6>Step 3</h6>
                                    <section>
                                        <div class="row">
                                            <div class="col-md-6" style="background-color: honeydew;height: 100%;">
                                                <div class="form-group">
                                                <label for="shortDescription3">selection des produits :</label>
